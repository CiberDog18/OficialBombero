<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimaryDark"
    tools:context=".activities.MapDriverBookingActivity">

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="155dp"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

    <LinearLayout
        android:id="@+id/linearLayoutDeleteImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_cancel"
            android:layout_gravity="left|top"
            app:civ_circle_background_color="@color/colorPrimaryDark"
            android:layout_marginLeft="15dp"/>


    </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayoutDeleteImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:id="@+id/btnStartBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INICIAR EMERGENCIA"
                android:textStyle="bold"
                android:background="@drawable/rounded_boton"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />


        </LinearLayout>
</LinearLayout>




    <Button
        android:id="@+id/btnFinishBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FINALIZAR EMERGENCIA"
        android:textStyle="bold"
        android:visibility="gone"
        android:background="@drawable/rounded_boton"
        android:backgroundTint="@color/bluelight"
        android:layout_margin="30dp" />



    <com.github.florent37.shapeofview.shapes.BubbleView
        android:layout_width="match_parent"
        android:layout_height="175dp"
        app:shape_bubble_arrowHeight="15dp"
        app:shape_bubble_arrowWidth="15dp"
        app:shape_bubble_arrowPosition="top"
        app:shape_bubble_borderRadius="20dp"
        android:layout_gravity="bottom"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewClientBooking"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/man"
                android:layout_gravity="center"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/white"
                android:layout_marginLeft="7dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="7dp"
                >

                <TextView
                    android:id="@+id/textViewOriginClientBooking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lugar de emergencia"
                    android:layout_marginLeft="10dp"
                    android:maxLines="2"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"/>


                <TextView
                    android:id="@+id/textViewClientBooking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del usuario"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorBlack"
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/textViewEmailClientBooking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email del usuario"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    />

            </LinearLayout>

        </LinearLayout>

    </com.github.florent37.shapeofview.shapes.BubbleView>

<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|right"
    android:layout_marginBottom="180dp"
    android:layout_marginRight="20dp"
    app:contentPadding="10dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/colorPrimaryDark"

    >

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:text="Tiempo"/>

</androidx.cardview.widget.CardView>




    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="180dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:contentPadding="10dp">

